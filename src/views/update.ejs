<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <div class="update-user-container">
        <form action="/update-user" method="POST">
            <input type="text" hidden name="id" value="<%=dataUser.id%>">
            <div>
                <label>First name</label>
                <input type="text" name="firstName" value="<%=dataUser.firstName%>">
            </div>
            <div>
                <label>Last name</label>
                <input type="text" name="lastName" value="<%=dataUser.lastName%>">
            </div>
            <div>
                <label>Email</label>
                <input type="email" name="email" value="<%=dataUser.email%>">
            </div>
            <div>
                <label>Address</label>
                <input type="text" name="address" value="<%=dataUser.address%>" >
            </div>
            <div>
                <button type="submit" class="btn-save">Save</button>
            </div>
        </form>
    </div>
</body>
</html>